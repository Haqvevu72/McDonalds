<Page x:Class="WpfApp1.View.Fail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Fail">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="\Images\Fail.webp" Width="150"></Image>
            <Label FontSize="16" FontWeight="Bold" Foreground="Red" Content="Access Denied !" HorizontalAlignment="Center"/>
            <Button Style="{StaticResource button}" Command="{Binding _back}">Back</Button>
        </StackPanel>
    </Grid>
</Page>
